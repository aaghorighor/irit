@model Suftnet.Cos.ViewModel.ContactModel
<!-- ==============================================
**Contact**
=================================================== -->
<section class="contact-wrapper-outer">
    <div class="container">
        <div class="row">
            <div class="col-md-8 form-area">
                <div class="contact-form-wrapper padding-lg">
                    <form name="contact-form" method="post" action="@Url.Action("create","contact")"  id="contact-form">
                        <div class="row">
                            <div class="col-md-6 input-col">
                                <label>FirstName</label>
                                <input name="FirstName" id="FirstName" placeholder="" type="text" required maxlength="50">
                            </div>
                            <div class="col-md-6 input-col">
                                <label>LastName</label>
                                <input name="LastName" id="LastName" placeholder="" type="text" required maxlength="50">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 input-col">
                                <label>Email</label>
                                <input name="Email" id="Email" placeholder="" maxlength="50" required type="email">
                            </div>
                            <div class="col-md-6 input-col">
                                <label>Phone</label>
                                <input name="Phone" id="Phone" placeholder="" maxlength="50" type="text">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label>Message</label>
                                <textarea name="Message" id="Message" placeholder="" required maxlength="500"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class="btn submit">Submit</button>
                            </div>
                            <div class="col-md-12">

                                @if (Model.flag != null)
                                {
                                    <div class="msg msg-success">Thank You, Your Message Has been Sent</div>
                                }
                               
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-info-wrapper padding-lg">
                    <div class="contact-info">
                        <h3>Contact Info</h3>
                        <ul class="info-contact-box">
                            <li>
                                <h6>The Gatehouse </h6>
                                <p>453 Cranbrook Road, llford Essex IG2 6EW.</p>
                            </li>
                            <li>
                                <h6>(+44)-020 3286 2416 </h6>
                            </li>
                            <li> <a href="mailto:info@suftnet.com ">info@suftnet.com </a> </li>
                        </ul>
                    </div>
                    <div class="social-media-box">
                        <h6><span>Connect with</span></h6>
                        <ul>
                            <li><a href="javascript:void(0)"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="javascript:void(0)"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="javascript:void(0)"><i class="fa fa-google-plus"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

