
@using Suftnet.Cos.Extension
<form action="@Url.Action("edit", "Order")" method="post" id="orderform">

    @Html.AntiForgeryToken()

    <div class="forms">

        <input type="hidden" name="Id" id="Id" value="" />

        <div class="grid-6-12 ">
            <label class="forms-lbl">FirstName (Optional):</label>
            <input type="text" name="FirstName" id="FirstName" class="forms-txt" maxlength="50" />
        </div>

        <div class="grid-6-12 ">
            <label class="forms-lbl">LastName (Optional):</label>
            <input type="text" name="LastName" id="LastName" class="forms-txt" maxlength="50" />
        </div>

        <div class="grid-6-12">
            <label class="forms-lbl">In Time : </label>
            <input type="text" name="Time" id="Time" readonly="readonly" class="forms-txt-date validate[required]" value="1" maxlength="9" />
        </div>

        <div class="grid-6-12">
            <label class="forms-lbl">Expected Guest:</label>
            <input type="text" name="ExpectedGuest" id="ExpectedGuest" onkeyup="numonly(this);" value="1" class="forms-txt validate[required]" maxlength="9" />
        </div>

        <div class="clear"></div>

        <div class="grid-6-12">
            <label class="forms-lbl">Table: </label>
            @Html.TableDropdown("TableId", "validate[required]")
        </div>

        <div class="grid-6-12">
            <label class="forms-lbl">Status: </label>
            @Html.OrderStatusDropdown("StatusId", "validate[required]")
        </div>

        <div class="clear"></div>

        <div class="grid-12-12">
            <input name="ChangeTable" id="ChangeTable" type="checkbox" value="true" /> <label class="form-lbl">Change Table</label> 
        </div>

        <div class="grid-12-12">
            <ul style="margin-left:0px; margin-top :5px" class="uibutton-group">
                <li><span class="etip"><a class="uibutton normal" id="btnSaveChanges" title="Save Changes">Save Changes</a></span></li>
                <li><span class="etip"><a class="uibutton normal" id="btnCloseOrder" title="Close">Close</a></span></li>
            </ul>
        </div>

    </div>   

</form>







