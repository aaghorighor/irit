@using Suftnet.Cos.Extension

<section class="section bg-light">
    <div class="container bring-to-front pb-0">
        <div class="section-heading text-center w-75 mx-auto">
            <h2>Why Irit?</h2>
            <p class="lead text-secondary">Whether you’re serving drinks at happy hour, serving customers a quick meal or brewing up the latest imported coffee bean, Irit is made for multiple types of small businesses.</p>
        </div>
        <div class="shadow bg-contrast p-5 rounded">
            <nav class="nav nav-tabs tabs-clean slide d-inline-flex mb-4"><a class="nav-item nav-link text-uppercase bold active" data-toggle="tab" href="#designers">Desktop</a><a class="nav-item nav-link text-uppercase bold" data-toggle="tab" href="#developers">Tablet</a></nav>
            <div class="tab-content">
                <div class="tab-pane active" id="designers">
                    <div class="row gap-y">
                        <div class="col-lg-6">
                            <h2 class="bold mb-4">Windows POS System for Small Business</h2>
                            <p class="lead text-secondary">
                                Irit is a web-based POS system that works on Windows PCs and Windows tablets.
                                With Irit, you can take care of customers and run your business from any PC.
                            </p>
                        </div>
                        <div class="col-lg-6">
                            <figure class="px-2"><img src="@Url.FrontOfficeImagePath("img/screens/dash/cart.png")"  class="img-responsive shadow rounded" alt="..."></figure>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="developers">
                    <div class="row gap-y">
                        <div class="col-lg-6">
                            <h2 class="bold mb-4">Andriod POS System for Small Business</h2>
                            <p class="lead text-secondary">
                                Irit is an easy to use touchscreen POS available for Android-based tablets.
                                You can manage business operations efficiently, process transactions and assist customers on the go.
                            </p>
                        </div>
                        <div class="col-lg-6">
                            <figure class="px-2"><img src="@Url.FrontOfficeImagePath("img/screens/dash/Screenshot_20201231-112344.png")" class="img-responsive shadow rounded" alt="..."></figure>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- ./How to Videos -->