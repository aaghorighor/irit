@using Suftnet.Cos.Extension;
@model List<Suftnet.Cos.DataAccess.SliderDto>

<table id="tdSlider" class="display">
    <thead>
        <tr>   
            <th align="left">Id#</th>   
            <th align="left">Created On</th>  
            <th align="left">Slider Type</th>     
            <th align="left">Title</th>       
            <th align="left">Publish</th>           
            <th style="text-align:center">Actions</th>  
        </tr>
    </thead>
    <tbody>

        @foreach (var _item in Model)
        {
            <tr id="@_item.Id">          
                <td align="left">@_item.Id</td>    
                <td align="left">@_item.CreatedOn</td>
                <td align="left">@_item.SliderType</td>  
                <td align="left">@_item.Title</td>               
                <td align="left">@_item.Publish</td>               
                <td style="text-align:center">
                    <a href="javascript:void(0)">
                        <span id="EditLink" style="margin:10px;"  editid="@_item.Id" title="Edit this row">
                            <img src="@Url.Asset("edit.png")" alt="" />
                        </span>
                    </a>
                    <a href="javascript:void(0)">
                        <span id="Delete" style="margin:10px;" deleteid="@_item.Id" title="Delete this row">
                            <img src="@Url.Asset("delete.png")" alt="" />
                        </span>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>

<script type="text/javascript">

    $(function () {

        $(document).on("click", "#Delete", function (e)
        {
            e.preventDefault();

            js.confirm('@Url.Action("Delete", "Slider")', { Id: $(this).attr("DeleteId") }, $(this).attr("DeleteId"), "#tdSlider").then(
            function (data) {

            });
        });

        $(document).on("click", "#EditLink", function (e)
        {
            e.preventDefault();

            js.ajaxGet('@Url.Action("Get", "Slider")', { Id: $(this).attr("EditId") }).then(
              function (data) {
                 
                  var dataobject = data.dataobject;

                  $("#Title").val(dataobject.Title);
                  $("#Description").val(dataobject.Description);
                  $("#SliderTypeId").val(dataobject.SliderTypeId);
                  $("#Publish").attr("checked", dataobject.Publish);
                  $('#Id').val(dataobject.Id);
                  $("#ImageUrl").val(dataobject.ImageUrl);
                                  
              });
        });

        suftnet_Settings.TableInit('#tdSlider', [0, 2, 3, 4,5]);
    });

</script>



