@using Suftnet.Cos.Extension;
@using Suftnet.Cos.Common

@model Suftnet.Cos.Web.StripeAdapterModel

 <div class="row no-gutters">
        <div class="col-lg-3">
            <i class="icon ion-ios-settings-strong"></i>
            <div class="dash-content">
                <label class="tx-primary">@Model.Subscription.Plan.Nickname </label>
                <h4>@Html.FormatCurrency((decimal)Model.Subscription.Plan.Amount / 100) </h4>

                @{
                    if (Model.Subscription.Plan.Id == PlanType.Basic)
                    {
                        <span class="tx-11 d-block">Monthly</span>
                    }

                    if (Model.Subscription.Plan.Id == PlanType.Premium)
                    {
                        <span class="tx-11 d-block">Every 6 Months</span>
                    }

                    if (Model.Subscription.Plan.Id == PlanType.PremiumPlus)
                    {
                        <span class="tx-11 pull-right d-block">Yearly</span>
                    }
                }


            </div><!-- dash-content -->
        </div><!-- col-3 -->
        <div class="col-lg-3">
            <i class="icon ion-ios-pulse-strong"></i>
            <div class="dash-content">
                <label class="tx-success">Status</label>
                <h4>@Model.Subscription.Status</h4>
            </div><!-- dash-content -->
        </div><!-- col-3 -->
        <div class="col-lg-3">
            <i class="icon ion-ios-stopwatch-outline"></i>
            <div class="dash-content">
                <label class="tx-purple">Start Period</label>
                <h4>
                    @if (Model.Subscription.CurrentPeriodStart.HasValue)
                    {
                        @Model.Subscription.CurrentPeriodStart.Value.ToString("MMMM dd, yyyy")
                    }

                </h4>
            </div><!-- dash-content -->
        </div><!-- col-3 -->
        <div class="col-lg-3">
            <i class="icon ion-ios-stopwatch"></i>
            <div class="dash-content">
                <label class="tx-danger">End Period</label>
                <h4>
                    @if (Model.Subscription.CurrentPeriodEnd.HasValue)
                    {
                        @Model.Subscription.CurrentPeriodEnd.Value.ToString("MMMM dd, yyyy")
                    }
                </h4>
            </div><!-- dash-content -->
        </div><!-- col-3 -->
    </div><!-- row -->
