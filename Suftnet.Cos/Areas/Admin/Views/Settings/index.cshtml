
@model Suftnet.Cos.DataAccess.GlobalDto

@{
    ViewBag.Title = "SUFTNET  | SETTINGS";  
}

<div class="content">
    <!-- Third width -->
    <form action="@Url.Action("edit", "settings")" method="post" id="form">
        <input type="hidden" id="Id" name="Id" />
        <input type="hidden" id="AddressId" name="AddressId" />

        <div class="widgets">

            <div class="oneTwo">

                <div class="widget">
                    <div class="header"><span><span class="ico gray window"></span>Mail Server </span></div>
                    <div class="content">
                        @Html.Partial("_Smtp")
                    </div>

                </div>

                <div class="widget">
                    <div class="header"><span><span class="ico gray window"></span>General </span></div>
                    <div class="content">
                        @Html.Partial("_General")
                    </div>
                </div>

                <div class="widget">
                    <div class="header"><span><span class="ico gray window"></span>Address </span></div>
                    <div class="content">
                        @Html.Partial("_Address")
                    </div>
                </div>

            </div>

            <div class="oneTwo">
                <div class="widget">
                    <div class="header"><span><span class="ico gray window"></span>Profile </span></div>
                    <div class="content">
                        <div class="forms">
                            <div class="grid-12-12">
                                <label class="forms-lbl">Company: </label>
                                <input type="text" name="Company" id="Company" class="forms-txt" value="" maxlength="50" />
                            </div>

                            <div class="grid-6-12">
                                <label class="forms-lbl">Telephone: </label>
                                <input type="text" name="Telephone" id="Telephone" class="forms-txt" value="" maxlength="20" />
                            </div>

                            <div class="grid-6-12">
                                <label class="forms-lbl">Mobile: </label>
                                <input type="text" name="Mobile" id="Mobile" class="forms-txt" value="" maxlength="20" />
                            </div>

                            <div class="grid-12-12">
                                <label class="forms-lbl">Email:</label>
                                <input type="text" name="Email" id="Email" class="forms-txt" value="" maxlength="50" />
                            </div>

                            <div class="grid-12-12">
                                <label class="form-lbl">Description :</label>
                                <div style="margin:5px;"></div>
                                <textarea id="Description" name="Description" rows="200" cols="200" onkeypress="return imposeMaxLength(event, this, 499);" class=""></textarea>
                            </div>
                        </div>
                    </div>
                </div>                
            </div>

            <div class="clear"></div>

            <ul style="margin-left:2px; margin-top :5px" class="uibutton-group">
                <li><span class="etip"><a class="uibutton icon add normal " id="btnSaveChanges" title="Save Changes">Save Changes</a></span></li>
            </ul>

        </div>

    </form>

</div><!-- End content -->

<div class="hidden">
    <span id="loadUrl" name="loadUrl" data-loadUrl="@Url.Action("fetch", "settings", new { area = "admin" })"></span>    
</div>
    
<script type="text/javascript">

    $(function () {

        setTimeout(function () {
            setting.loadAdmin();                       
        }, 0);

    });

</script>