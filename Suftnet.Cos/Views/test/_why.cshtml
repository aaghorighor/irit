@using Suftnet.Cos.Extension

<section class="section bg-light">
    <div class="container bring-to-front">
        <div class="row gap-y align-items-center">
            <div class="col-md-6">
                <div class="rounded bg-primary-gradient shadow">
                    <div class="d-flex flex-column align-items-center py-3"><img src="@Url.FrontOfficeImagePath("img/bg/asset-1.svg")" class="img-responsive w-50" alt=""></div>
                </div>
                <div class="rounded shadow-box bg-contrast mt-3">
                    <div class="media align-items-center px-3">
                        <i data-feather="bar-chart" class="stroke-primary mr-3" width="36" height="36"></i>
                        <div class="media-body my-3 pl-3 b-l">
                            <p class="bold text-primary my-0">Back Office </p>
                            <p class="my-0 text-secondary">For managing Menus, Category, Tax, Discount, Tables and View Reports</p>
                        </div>
                    </div>
                </div>
                <div class="rounded shadow-box bg-contrast mt-3">
                    <div class="media align-items-center px-3">
                        <i data-feather="smartphone" width="36" height="36" class="stroke-primary mr-3"></i>
                        <div class="media-body my-3 pl-3 b-l">
                            <p class="bold text-primary my-0">Front Office</p>
                            <p class="my-0 text-secondary">For managing customer order (Delivery, Dine, Reservation)</p>
                            <hr class="my-3">
                            <nav id="sw-nav-1" class="nav nav-tabs tabs-clean border-bottom-0"><a href="javascript:;" class="nav-item nav-link pl-md-0 py-0 d-flex flex-column align-items-center border-bottom-0 active" data-step="1"><i data-feather="mail" class="icon"></i> <span class="d-none small">Inbox</span> </a><a href="javascript:;" class="nav-item nav-link py-0 d-flex flex-column align-items-center border-bottom-0" data-step="2"><i data-feather="calendar" class="icon"></i> <span class="d-none small">Calendar</span> </a><a href="javascript:;" class="nav-item nav-link py-0 d-flex flex-column align-items-center border-bottom-0" data-step="3"><i data-feather="file" class="icon"></i> <span class="d-none small">Invoice</span></a></nav>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 ml-md-auto text-center text-md-left">
                <span class="rounded-pill shadow-box badge badge-info bold py-2 px-4">Simple and transparent</span>
                <h2 class="mt-3">The all-in-one solution for small business management</h2>
                <p class="text-secondary">
                    Business management is the cornerstone of Irit.
                    Process payments, generate reports, manage your stock with the inbuilt inventory software.
                </p>
                <hr>
                <div class="swiper-container" data-sw-navigation="#sw-nav-1" data-sw-navigation-active="active">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <figure class="shadow-box"><img src="@Url.FrontOfficeImagePath("img/screens/dash/cart.png")" alt="Online Ordering" class="img-responsive rounded"></figure>
                            <p class="small text-center text-danger">Online Ordering</p>
                        </div>
                        <div class="swiper-slide">
                            <figure class="shadow-box"><img src="@Url.FrontOfficeImagePath("img/screens/dash/dine.png")" alt="Dine Table (Free or Occupied)" class="img-responsive rounded"></figure>
                            <p class="small text-center text-danger">Dine Table (Free or Occupied)</p>
                        </div>
                        <div class="swiper-slide">
                            <figure class="shadow-box"><img src="@Url.FrontOfficeImagePath("img/screens/dash/delivery.png")" alt="Create Delivery Order" class="img-responsive rounded"></figure>
                            <p class="small text-center text-danger">Create Delivery Order</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- ./Why DashCore -->