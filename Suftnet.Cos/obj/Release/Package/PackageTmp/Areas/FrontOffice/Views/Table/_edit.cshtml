
@using Suftnet.Cos.Extension
<form action="@Url.Action("edit", "dineIn", new { area = "frontOffice" })" method="post" id="editform">

    @Html.AntiForgeryToken()

    <div class="forms">

        <input type="hidden" name="editId" id="editId" value="" />

        <div class="grid-6-12">
            <label class="forms-lbl">Table For:</label>
            <input type="text" name="editExpectedGuest" id="editExpectedGuest" onkeyup="numonly(this);" value="1" class="forms-txt validate[required]" maxlength="9" />
        </div>

        <div class="grid-6-12">
            <label class="forms-lbl">Time In: </label>
            <input type="text" name="editTime" id="editTime" readonly="readonly" class="forms-txt-date validate[required]" value="1" maxlength="9" />
        </div>

        <div class="clear"></div>

        <div class="grid-6-12">
            <label class="forms-lbl">Table: </label>
            @Html.TableDropdown("editTableId", "validate[required]")
        </div>

        <div class="grid-6-12">
            <label class="forms-lbl">Status: </label>
            @Html.OrderStatusDropdown("editStatusId", "validate[required]")
        </div>

        <div class="clear"></div>

        <div class="grid-12-12">
            <input name="ChangeTable" id="ChangeTable" type="checkbox" value="true" /> <label class="form-lbl">Change Table</label>
        </div>

        <div class="grid-12-12">
            <ul style="margin-left:0px; margin-top :5px" class="uibutton-group">
                <li><span class="etip"><a class="uibutton normal" id="btnSaveChanges" title="Save Changes">Save Changes</a></span></li>
                <li><span class="etip"><a class="uibutton normal" id="btnCloseOrder" title="Close">Close</a></span></li>
            </ul>
        </div>

    </div>   

</form>







