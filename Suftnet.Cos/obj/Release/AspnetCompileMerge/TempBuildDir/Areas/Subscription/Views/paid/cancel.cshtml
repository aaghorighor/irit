@using Suftnet.Cos.Extension;
@using Suftnet.Cos.Common

<div class="slim-mainpanel">
    <div class="container">

        <div class="slim-pageheader">
            <ol class="breadcrumb slim-breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("index","dashboard", new { area ="subscription" } )">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Cancel Subscription</li>
            </ol>
            <h6 class="slim-pagetitle">Cancel Subscription</h6>
        </div><!-- slim-pageheader -->

        <div class="row no-gutters">
            <div class="col-lg-6 bg-primary">              

                <div class="pd-40">    
                    <div class="d-flex justify-content-center mg-b-30">
                        <img src="@Url.SlimImage("icons8-cancel-subscription-80.png")" alt="">
                    </div>               
                    <p class="tx-white op-7 mg-b-30">
                        You are going to cancel the automatic renewal of your subscription.
                        Are you completely sure you want to do that?
                        After cancelation, your plan will continue active until the period ends.
                    </p>                    
                </div>
            </div><!-- col-6 -->
            <div class="col-lg-6 bg-white">
                <div class="pd-y-30 pd-xl-x-30">
                <form method="post" action="@Url.Action("cancel","paid", new { area ="subscription" })">

                    <textarea id="reason" name="reason" rows="11" class="form-control" placeholder="Please could you tell us why you've unsubscribed?, this will enable us to improve on our services." maxlength="300"></textarea>
                    <br />
                    <a class="btn btn-outline-primary" href="@Url.Action("index","dashboard", new { area ="subscription" } )">Back</a>
                    <button type="submit" class="btn btn-primary">Submit</button>

                </form>           

                </div><!-- pd-20 -->
            </div><!-- col-6 -->
        </div><!-- row -->

    </div><!-- container -->
</div><!-- slim-mainpanel -->