@using Suftnet.Cos.Extension

 <form action="@Url.Action("create", "delivery")" method="post" id="form">

        @Html.AntiForgeryToken()

     <div class="forms">

         <input type="hidden" name="DeliveryId" id="DeliveryId" value="c7a037e8-3045-4996-9e02-1794e08622c6" />
         <input type="hidden" name="Id" id="Id" value="c7a037e8-3045-4996-9e02-1794e08622c6" />

         <div class="grid-12-12">
             <label class="forms-lbl">Delivery Address :</label>
             <input type="text" name="AddressLine" id="AddressLine" readonly="readonly" class="forms-txt" />
         </div>

         <div class="grid-6-12 ">
             <label class="forms-lbl">FirstName* :</label>
             <input type="text" name="FirstName" id="FirstName" class="forms-txt validate[required]" maxlength="50" />
         </div>

         <div class="grid-6-12 ">
             <label class="forms-lbl">LastName*:</label>
             <input type="text" name="LastName" id="LastName" class="forms-txt validate[required]" maxlength="50" />
         </div>

         <div class="grid-6-12 ">
             <label class="forms-lbl">Email:</label>
             <input type="text" name="Email" id="Email" class="forms-txt" maxlength="50" />
         </div>

         <div class="grid-6-12 ">
             <label class="forms-lbl">Mobile*:</label>
             <input type="text" name="Mobile" id="Mobile" class="forms-txt validate[required]" maxlength="50" />
         </div>

         <div class="grid-6-12">
             <label class="forms-lbl">Expected Time : </label>
             <input type="text" name="Time" id="Time" readonly="readonly" class="forms-txt-date validate[required]" value="1" maxlength="9" />
         </div>

         <div class="grid-6-12">
             <label class="forms-lbl">Status: </label>
             @Html.OrderStatusDropdown("StatusId", "validate[required]")
         </div>

         <div class="grid-12-12">
             <label class="forms-lbl">Note :</label>

             <textarea id="Note" name="Note" style="max-height:100px;" rows="" cols="" maxlength="500" class="form-txt"></textarea>
         </div>

         <div class="grid-6-12">
             <label class="forms-lbl">Date:</label>
             <input type="text" name="StartDt" id="StartDt" readonly="readonly" class="forms-txt-date validate[required]" value="@DateTime.Now.ToShortDateString()" maxlength="9" />
         </div>

         <div class="clear"></div>

         <div class="hide">
             <input type="hidden" id="DeliveryId" name="DeliveryId" />
             <input type="hidden" id="Latitude" name="Latitude" />
             <input type="hidden" id="Logitude" name="Logitude" />
             <input type="hidden" id="AddressLine" name="AddressLine" />
             <input type="hidden" id="Duration" name="Duration" />
             <input type="hidden" id="Distance" name="Distance" />
         </div>

         <ul style="margin-left:5px; margin-top :5px" class="display">
             <li class="display"><span class="etip"><a class="uibutton normal " id="btnSubmit" title="Save Changes">Save Changes</a></span></li>
             <li class="display"><span class="etip"><a class="uibutton icon prev normal " id="btnClose" title="Close">Close</a></span></li>
         </ul>

     </div>        

 </form>







