@using Suftnet.Cos.Extension;
@using Suftnet.Cos.Common

@model Suftnet.Cos.Web.StripeAdapterModel

<div class="row no-gutters">
    <div class="col-lg-3">
        <i class="icon ion-ios-settings-strong"></i>
        <div class="dash-content">
            <label class="tx-primary">Trial </label>
            <h4>15 days  </h4>          
        </div><!-- dash-content -->
    </div><!-- col-3 -->
    <div class="col-lg-3">
        <i class="icon ion-ios-pulse-strong"></i>
        <div class="dash-content">
            <label class="tx-success">Status</label>
            <h4>@Model.Tenant.Status</h4>
        </div><!-- dash-content -->
    </div><!-- col-3 -->
    <div class="col-lg-3">
        <i class="icon ion-ios-stopwatch-outline"></i>
        <div class="dash-content">
            <label class="tx-purple">Start Period</label>
            <h4>
                @if (Model.Tenant.StartDate != null)
                {
                    @Model.Tenant.StartDate.Value.ToShortDateString()
                }

            </h4>
        </div><!-- dash-content -->
    </div><!-- col-3 -->
    <div class="col-lg-3">
        <i class="icon ion-ios-stopwatch"></i>
        <div class="dash-content">
            <label class="tx-danger">End Period</label>
            <h4>
                @if (Model.Tenant.ExpirationDate != null)
                {
                    @Model.Tenant.ExpirationDate.ToShortDateString()
                }

            </h4>
        </div><!-- dash-content -->
    </div><!-- col-3 -->
</div><!-- row -->