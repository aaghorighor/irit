@using Suftnet.Cos.Extension;

<form action="#" method="post" id="form">

    <input type="hidden" id="ImageUrl" name="ImageUrl" />
    <input type="hidden" name="UserId" value="" id="UserId" />

    <div class="forms">

        <div class="grid-6-12">
            <label class="forms-lbl">FirstName: </label>
            <input type="text" name="FirstName" id="FirstName" readonly="readonly" class="forms-txt validate[required]" size="50" autocomplete="off" maxlength="50" />
        </div>

        <div class="grid-6-12">
            <label class="forms-lbl">LastName: </label>
            <input type="text" name="LastName" id="LastName" readonly="readonly" class="forms-txt validate[required]" size="50" maxlength="50" />
        </div>

        <div class="grid-6-12">
            <label class="forms-lbl">Email: </label>
            <input type="text" name="Email" id="Email" readonly="readonly" class="forms-txt validate[required]" size="50" maxlength="50" />
        </div>

        <div class="grid-6-12">
            <label class="forms-lbl">Area: </label>
            @Html.AdminAreaDropdown("AreaId", "validate[required]")
        </div>

        <div class="grid-6-12">
            <label class="forms-lbl">Password: </label>
            <input type="password" name="Password" id="Password" class="forms-txt" size="20" maxlength="20" autocomplete="off" />
        </div>

        <div class="grid-12-12">
            <input name="Active" id="Active" type="checkbox" /> <label class="form-lbl">Active</label><br />
            <input name="ChangePassword" id="ChangePassword" type="checkbox" /> <label class="form-lbl">Change Password</label>
        </div>

        <div class="grid-12-12">
            <ul style="margin-left:0px; margin-top :0px" class="display01">
                <li class="display01"><span class="etip"><a class="uibutton normal " id="btnSubmit" title="Save Changes"><i class="fa fa-save"></i> Save Changes</a></span></li>
                <li class="display01"><span class="etip"><a class="uibutton normal" id="btnCloseEdit" title=""><i class="fa fa-close"></i> Close</a></span></li>
            </ul>
        </div>

    </div>
    
</form>








