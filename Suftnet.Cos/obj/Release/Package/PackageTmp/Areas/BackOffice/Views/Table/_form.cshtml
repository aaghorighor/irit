<form action="@Url.Action("Create", "Table")" method="post" id="form">
    @Html.AntiForgeryToken()
    <div class="forms">

        <input type="hidden" name="Id" id="Id" value="c7a037e8-3045-4996-9e02-1794e08622c6" />

        <div class="grid-12-12">
            <label class="forms-lbl">Number:</label>
            <input type="text" name="Number" id="Number" class="forms-txt validate[required]" maxlength="50" />
        </div>

        <div class="grid-12-12">
            <label class="forms-lbl">Size:</label>
            <input type="text" name="Size" id="Size" class="forms-txt validate[required]" maxlength="50" />
