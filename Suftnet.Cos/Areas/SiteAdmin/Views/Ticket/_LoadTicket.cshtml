@using Suftnet.Cos.Extension
@model IEnumerable<Suftnet.Cos.DataAccess.TicketDto>

<div class="tableName">    
          
<table id="tdTicket" class="display" >
    <thead>
        <tr>   
            <th align="left">#Id</th>  
            <th align="left">Date</th>                           
            <th align="left">Status</th>                            
            <th align="left">Priority</th>
            <th align="left">Subject</th>   
            <th align="left">Department</th>                     
            <th style="text-align:center ">Actions</th>  
        </tr>
    </thead>
    <tbody> 
    
    @foreach (var _item in Model)
    {    
        <tr  id="@_item.Id">   
            <td align="left">@_item.Id</td>  
            <td align="left">@_item.CreatedOn</td>  
            <td align="left">@_item.Status</td>           
            <td align="left">@_item.Priority</td>                       
            <td align="left">@_item.Subject</td>    
            <td align="left">@_item.Department</td>      
            <td style="text-align:center ">
                <a href="javascript:void(0)">
                    <span id="EditLink" editid="@_item.Id" title="Edit this row">
                        <img src="@Url.Asset("edit.png")" alt="" />
                    </span>
                </a>
                <a href="javascript:void(0)">
                    <span style="margin:10px;" id="Delete" deleteid="@_item.Id" title="Delete this row">
                        <img src="@Url.Asset("delete.png")" alt="" />
                    </span>
                </a>
                <a href="javascript:void(0)">
                    <span style="margin:10px;" id="TicketThreadLink" ticketid="@_item.Id" title="Show resolution">
                        <img src="@Url.Asset("file.png")" alt="" />
                    </span>
                </a>

            </td>
        </tr>   
    }  
            
    </tbody>
</table>               
</div>

<script type="text/javascript">

    $(function () {

        $("#TicketThreadLink").live("click", function (e) {

            e.preventDefault();

            $("#TicketId").val($(this).attr("TicketId"));
            $("#ticketId").text("Ticket No :" + $(this).attr("TicketId"));

            js.ajaxGet('@Url.Action("GetAll", "TicketThread")', { Id: $(this).attr("ticketid") }).then(
               function (data) {
                                                                         
                   suftnet_grid.refreshTicketThread(data.dataobject);
               });

            $("#MainCollapsible").accordion("activate", 2);
        });

        $("#Delete").live("click", function (e) {
            e.preventDefault();

            js.confirm('@Url.Action("Delete", "Ticket")', { Id: $(this).attr("DeleteId") }, $(this).attr("DeleteId"), "#tdTicket").then(
            function (data) {

            });
        });

        $("#EditLink").live("click", function (e) {
            e.preventDefault();

            js.ajaxGet('@Url.Action("Get", "Ticket")', { Id: $(this).attr("EditId") }).then(
             function (data) {
                 var dataobject = data.dataobject;

                 $("#Subject").val(dataobject.Subject);
                 $("#DepartmentId").val(dataobject.DepartmentId);
                 $("#PriorityId").val(dataobject.PriorityId);
                 $("#StatusId").val(dataobject.StatusId);
                 $("#UserId").val(dataobject.UserId);
                 $("#Id").val(dataobject.Id);
                 $("#Note").val(dataobject.Note);
                 $("#CreatedDT").val(dataobject.CreatedOn);

                 $("#MainCollapsible").accordion("activate", 0);

             });
        });

        suftnet_Settings.TableInit('#tdTicket', [0, 6]);
    });

 </script>




