@using Suftnet.Cos.Extension
@model Suftnet.Cos.Web.ViewModel.SectionModel
@{
    ViewBag.Title = "SUFTNET | SECTION ";
    Layout = "~/Views/Shared/_knowledgeBaseLayout.cshtml";
}

<div class="section-hero uk-background-blend-color-burn uk-background-top-center uk-background-cover uk-section-large1 cta" style="background-image: url('/Content/logo/logo.png')">
    <nav class="uk-navbar-container uk-margin uk-navbar-transparent uk-light">
        <div class="uk-container">
            <div uk-navbar>
                <div class="uk-navbar-left">
                    <a class="uk-navbar-item uk-logo uk-text-uppercase" href="@Url.Action("index","home")"><span class="uk-margin-small-right" uk-icon="icon: lifesaver"></span> irit</a>
                </div>
                <div class="uk-navbar-right">
                    <a class="uk-navbar-item uk-logo uk-text-uppercase" href="@Url.Action("index","home")"><span class="uk-margin-small-right" uk-icon="icon: chevron-left"></span> Back</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="uk-container hero">
        <h1 class="uk-heading-primary uk-text-center uk-light">@Model.Header.Title</h1>
        <p class="uk-text-lead uk-text-center uk-light">
            @Model.Header.Description
        </p>
        <div class="uk-flex uk-flex-center">

        </div>
    </div>
</div>

<div class="uk-section">
    <div class="uk-container">
        <div class="uk-child-width-1-3@s uk-grid-match uk-grid-medium uk-text-center" uk-grid>

            @foreach (var item in Model.Sections)
            {
                <div>
                    <a href="@Url.Action("entry","article", new { sectionId = item.SectionId, chapterId = item.Id })" class="box uk-border-rounded">
                        <h3>@item.SubSection</h3>
                    </a>
                </div>
            }

        </div>
    </div>
</div>

