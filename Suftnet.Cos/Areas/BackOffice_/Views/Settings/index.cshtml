@using Suftnet.Cos.Extension;

@{
    ViewBag.Title = "SUFTNET | SETTINGS";
}

@Styles.Render("~/bundle/baze-css")

<div id="settingsContanier" style="display :none">

    <ul class="tabs">
        <li><a href="#tab1">Profile </a></li>
        <li><a href="#tab2">About us </a></li>
        <li><a href="#tab3">Statement of Faith</a></li>
        <li><a href="#tab4">Mission</a></li>
    </ul>

    <form action="@Url.Action("Edit", "Settings")" method="post" id="form">

        @Html.AntiForgeryToken()

        <input type="hidden" id="CurrencyCode" name="CurrencyCode" />
        <input type="hidden" id="LogoUrl" name="LogoUrl" />
        <input type="hidden" id="PastorUrl" name="PastorUrl" />
        <input type="hidden" id="BackgroundUrl" name="BackgroundUrl" />
        <input type="hidden" id="Id" name="Id" />
        <input type="hidden" id="Latitude" name="Latitude" />
        <input type="hidden" id="Longitude" name="Longitude" />
        <input type="hidden" id="AddressId" name="AddressId" />

        <div class="tab_container">

            <div id="tab1" class="tab_content">
                <div class="widgets">

                    <div class="oneTwo">

                        <div class="widget">
                            <div class="header">
                                <span>
                                    <span class="ico gray help2 tooltip" title="..........You will be receiving a few emails over the next few days with some hints and tips about how to get the most from Jerur,
but please remember - if you do have any questions, please drop an email to support@suftnet.com, or give us a call at (+44)-020 3286 2416.
We hope you enjoy our services."></span>General
                                </span>
                            </div>
                            <div class="content">
                                @Html.Partial("_general")
                            </div>
                        </div>

                        <div class="widget">
                            <div class="header">
                                <span>
                                    <span class="ico gray help2 tooltip" title="...You will be receiving a few emails over the next few days with some hints and tips about how to get the most from Jerur,
