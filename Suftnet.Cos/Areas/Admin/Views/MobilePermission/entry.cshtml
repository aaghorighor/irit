@{
    ViewBag.Title = "SUFTNET | MOBILE PERMISSION ";
    Layout = "~/Areas/BackOffice/Views/Shared/_backofficeLayout.cshtml";
}

<ul style="margin-left:2px; margin-top :5px" class="uibutton-group">
    <li><span class="etip"><a href="@Url.Action("entry","permission", new { name =this.ViewContext.RouteData.Values["username"].ToString(), queryString = this.ViewContext.RouteData.Values["userString"].ToString() })" class="uibutton icon prev normal" title="Back to web permission">Back</a></span></li>
</ul>

<div class="widgets" style="display:none">
    <div class="twoOne">
        <div class="widget">
            <div class="header"><span><span class="ico gray window"></span>@ViewContext.RouteData.Values["username"].ToString()</span></div>
            <div class="content">
                <div class="tableName">
                    @Html.Partial("_load")
                </div>
            </div>
        </div>
    </div>
    <div class="oneThree">
        <div class="widget">
            <div class="header"><span><span class="ico gray window"></span></span></div>
            <div class="content">
                    @Html.Partial("_form")
            </div>
        </div>
    </div>
    <div class="clear"></div>
</div>

<script type="text/javascript">

    $(function () {

        mobilePermission.pageInit();

        setTimeout(function () {
            $(".widgets").show();
        }, 0);

    });


</script>