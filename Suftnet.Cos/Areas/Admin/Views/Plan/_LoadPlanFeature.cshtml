<div class="tableName">

    <table id="tdPlanFeature" class="display">
        <thead>
            <tr>
                <th align="left">Id#</th>
                <th align="left">Index</th>
                <th align="left">Feature</th>
                <th align="left">Basic</th>
                <th align="left">Premium</th>
                <th align="left">Premium Plus</th>                
                <th style="text-align:center">Actions</th>
            </tr>
        </thead>
        <tbody>            

        </tbody>
    </table>

</div>

<script type="text/javascript">

    $(function () {

        $("#DeletePlanFeature").live("click", function (e) {

            e.preventDefault();

            js.confirm('@Url.Action("Delete", "PlanFeature")', { Id: $(this).attr("deleteid") }, $(this).attr("deleteid"), "#tdPlanFeature").then(
              function (data) {

              });
        });

        $("#EditPlanFeatureLink").live("click", function (e)
        {
            e.preventDefault();

            js.ajaxGet('@Url.Action("Get", "PlanFeature")', { Id: $(this).attr("EditId") }).then(
               function (data) {
                   var dataobject = data.dataobject;

                   $("#BasicId").val(dataobject.BasicId);
                   $("#ProductFeatureId").val(dataobject.ProductFeatureId);
                   $("#AdvanceId").val(dataobject.AdvanceId);
                   $("#ProfessionalId").val(dataobject.ProfessionalId);
                   $("#BasicValue").val(dataobject.BasicValue);
                   $("#PremiumValue").val(dataobject.PremiumValue);
                   $("#PremiumPlusValue").val(dataobject.PremiumPlusValue);
                   $("#IndexNo").val(dataobject.IndexNo);
                   $("#Planfeatureform #Id").val(dataobject.Id);

               });
        });

        suftnet_Settings.TableInit('#tdPlanFeature', [ 2,3, 4, 5,6]);
    });

</script>



