
@{
    ViewBag.Title = "SUFTNET | MENU";
}

<div class="topcolumn">
    <ul style="margin-left:0px; margin-top :5px; " class="uibutton-group">
       <li><span><a href="@Url.Action("index", "category")" class="uibutton icon add normal tooltip" title="Add Category">Category</a></span></li>
       <li><span><a href="@Url.Action("index", "unit")" class="uibutton icon add normal tooltip" title="Add Unit">Unit</a></span></li>
       <li><span><a href="@Url.Action("index", "tax")" class="uibutton icon add normal tooltip" title="Add Tax">Tax</a></span></li>
       <li><span><a href="@Url.Action("index", "discount")" class="uibutton icon add normal tooltip" title="Add Discount">Discount</a></span></li>
    </ul>
    <div class="clear"></div>
</div>

<ul class="tabs">
    <li><a class="tooltip" title="Add/Edit Menu" href="#tab1">Menu </a></li>
    <li><a class="tooltip" title="View Existing Menus" href="#tab2">Menu Viewer </a></li>
</ul>

<div class="tab_container" style="display:none">

    <div id="tab1" class="tab_content">

        <div class="widgets">
                       
            <div class="oneTwo">
                <div class="widget">
                    @Html.Partial("_form")
                </div>

            </div>

            <div class="oneTwo">
                <div class="widget">
                    @Html.Partial("_photo")
                </div>
            </div>
            <div class="clear"></div>
        </div>
       
    </div>

    <div id="tab2" class="tab_content">
        <div class="widgets">
            <div class="widget">
                <div class="header"><span><span class="ico  gray help2 tooltip"></span> </span></div>
                <div class="content">
                    <div class="tableName">
                        @Html.Partial("_load")
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script type="text/javascript">

    $(function () {

        _menu.pageInit();

        setTimeout(function () {
            $(".tab_container").show();
         
        }, 0);

    });
</script>





