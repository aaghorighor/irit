@using Suftnet.Cos.Extension;
@model Suftnet.Cos.Web.StripeAdapterModel

<div class="slim-mainpanel">
    <div class="container">

        <div class="slim-pageheader">
            <ol class="breadcrumb slim-breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("index","dashboard", new { area ="subscription" } )">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Delete Payment Card</li>
            </ol>
            <h6 class="slim-pagetitle">Delete Payment Card</h6>
        </div><!-- slim-pageheader -->

        <div class="row no-gutters m-lg-5 p-5">

            <div class="col-sm-4 bg-white"></div>
            <div class="col-lg-4 bg-white text-center">

                <form class="p-5" name="form" id="form" method="post" action="@Url.Action("delete", "card", new { area = "Subscription" })" autocomplete="off">
                   
                    <input type="hidden" name="cardId" id="cardId" value="@Model.DeleteCard.CardId" />
                    <input type="hidden" name="customerStripeId" id="customerStripeId" value="@Model.DeleteCard.CustomerStripeId" />
                    
                    <p class="tx-black op-8 mg-b-10">
                        Are you sure you want to delete this card?
                    </p>

                    <a class="btn btn-outline-primary" href="@Url.Action("index","dashboard", new { area ="subscription" } )">No</a>
                    <button type="submit" class="btn btn-primary">Yes</button>

                </form>

            </div>

            <div class="col-lg-4 bg-white"></div>
        </div><!-- row -->

    </div><!-- container -->
</div><!-- slim-mainpanel -->