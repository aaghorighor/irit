@using Suftnet.Cos.Extension
@model Suftnet.Cos.DataAccess.TourDto

<div class="row">
    <div class="col-md-6">
        <div class="content-area">
            <div class="icon"><span>@Model.Index</span></div>
            <div class="text-area">
                <h2>@Model.Title</h2>
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <figure class="right"><img src="@Url.Tour(Model.ImageUrl, Model.StyleTypeId)" height="290" width="380" class="img-fluid" alt=""></figure>
    </div>
</div>