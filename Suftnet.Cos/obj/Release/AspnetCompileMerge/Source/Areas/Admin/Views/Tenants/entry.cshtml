@{
    ViewBag.Title = "SUFTNET | SETTINGS";
}

@Styles.Render("~/bundle/baze-css")

<ul style="margin-left:0px; margin-top :5px" class="uibutton-group">
    <li><span class="etip"><a href="@Url.Action("index", "tenants")" class="uibutton icon prev normal" title="Back">Back</a></span></li>
</ul>

<div id="settingsContanier" style="display :none">

    <ul class="tabs">
        <li><a href="#tab1">Profile </a></li>
        <li><a href="#tab2">About us </a></li>
    </ul>

    <form action="@Url.Action("edit", "tenants")" method="post" id="form">

        @Html.AntiForgeryToken()

        <input type="hidden" id="CurrencyCode" name="CurrencyCode" />
        <input type="hidden" id="LogoUrl" name="LogoUrl" />
        <input type="hidden" id="BackgroundUrl" name="BackgroundUrl" />
        <input type="hidden" id="Latitude" name="Latitude" />
        <input type="hidden" id="Longitude" name="Longitude" />
        <input type="hidden" id="AddressId" name="AddressId" />
        <input type="hidden" id="Id" name="Id" value="@ViewContext.RouteData.Values["queryString"].ToString()" />
        <input type="hidden" id="TenantId" name="TenantId" value="@ViewContext.RouteData.Values["queryString"].ToString()" />

        <div class="tab_container">

            <div id="tab1" class="tab_content">

                <div class="oneTwo">

                    <div class="widget">
                        <div class="header">
                            <span>
                                <span class="ico gray window" title=""></span>General
                            </span>
                        </div>
                        <div class="content">
                            @Html.Partial("_general")
                        </div>
                    </div>

                    <div class="widget">
                        <div class="header"><span><span class="ico gray window"></span>Delivery </span></div>
                        <div class="content">
                            @Html.Partial("_delivery")
                        </div>
                    </div>

                    <div class="widget">
                        <div class="header"><span><span class="ico gray window"></span>Address </span></div>
                        <div class="content">
                            @Html.Partial("_address")
                        </div>
                    </div>
                </div>

                <div class="oneTwo">

                    <div class="widget">
                        <div class="header"><span><span class="ico gray window"></span>Profile </span></div>
                        <div class="content">
                            @Html.Partial("_profile")
                        </div>
                    </div>
                </div>
            </div>

            <div id="tab2" class="tab_content">
                <div class="widgets">
                    @Html.Partial("_aboutus")
                </div>
            </div>

        </div>

        <br />
        <input name="Publish" id="Publish" type="checkbox" /><label class="form-lbl">Publish in Irit Directory</label>
        <input name="PushNotification" id="PushNotification" type="checkbox" /> <label class="form-lbl">Push Notification</label>
        <div class="clear"></div><br />
        <span class="etip"><a class="uibutton normal padding-top" id="btnSubmit" title="Save Changes">Save Changes</a></span>

    </form>

    <div class="hide">
        <span id="settingsUrl" name="settingsUrl" data-settingsUrl="@Url.Action("fetch", "tenants", new { queryString = ViewContext.RouteData.Values["queryString"].ToString() })"></span>
        <span id="logoImagePlaceHolderUrl" name="logoImagePlaceHolderUrl" data-logoImagePlaceHolderUrl="/Content/photo/logo/100x100/"></span>
        <span id="backgroundImagePlaceHolderUrl" name="backgroundImagePlaceHolderUrl" data-backgroundImagePlaceHolderUrl="/Content/photo/background/500x500/"></span>
        <span id="blankImagePlaceHolderUrl" name="blankImagePlaceHolderUrl" data-blankImagePlaceHolderUrl="/Content/photo/blank.jpg"></span>
        <span id="uploadBackgroundUrl" name="uploadBackgroundUrl" data-uploadBackgroundUrl="@Url.Action("uploadBackground", "settings", new { area = "BackOffice" })"></span>
        <span id="uploadLogoUrl" name="uploadLogoUrl" data-uploadLogoUrl="@Url.Action("uploadLogo", "settings", new { area = "BackOffice" })"></span>
    </div>

</div>

@Scripts.Render("~/bundle/baze")
<script type="text/javascript">

    $(function () {

        setTimeout(function () {
            setting.adminPageInit();           

            $("#settingsContanier").show();
        }, 0);

    });

</script>

