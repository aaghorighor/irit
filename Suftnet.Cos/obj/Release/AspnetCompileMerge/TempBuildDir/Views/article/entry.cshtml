@using Suftnet.Cos.Extension
@model Suftnet.Cos.Web.ViewModel.TopicModel
@{
    ViewBag.Title = "SUFTNET | ARTICLE ";
    Layout = "~/Views/Shared/_knowledgeBaseLayout.cshtml";
}

@Html.Partial("_secondaryHeader")

<div class="uk-container">
    <div uk-grid="" class="uk-grid">
        <div class="uk-width-2-3@m uk-first-column">
            <ul class="uk-breadcrumb uk-visible@m">
                <li><a href="@Url.Action("entry","section", new { Id =ViewContext.RouteData.Values["sectionId"].ToString() })" class="uk-button uk-button-outline-primary uk-button-small uk-margin">Back</a></li>
            </ul>
        </div>
        <div class="uk-width-1-3@m">
            <div class="uk-margin">

            </div>
        </div>
    </div>
    <div class="border-top"></div>
</div>

<div class="uk-section uk-section-small section-content">
    <div class="uk-container uk-position-relative">
        <div uk-grid>
            <div class="uk-width-5-7@m">
                <article class="uk-article">
                    <header>
                        <h1 class="uk-article-title uk-margin-bottom">@Model.Section.SubSection</h1>
                    </header>
                    <div class="entry-content">
                        <p class="uk-text-lead">@Html.Raw(Model.Section.Description)</p>

                        @{
                            foreach (var item in Model.Topics)
                            {
                                <h2 id="@item.Id">@item.Topic</h2>

                                @Html.Raw(item.Description)

                                if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <figure class="right"><img src="@Url.TopicImage630x455(item.ImageUrl)" class="img-fluid" alt=""></figure>
                                }

                                foreach (var outer in item.SubTopics)
                                {
                                    @Html.Raw(outer.Description)

                                    if (!string.IsNullOrEmpty(outer.ImageUrl))
                                    {
                                        <figure class="right"><img src="@Url.TopicImage630x455(outer.ImageUrl)" class="img-fluid" alt=""></figure>
                                    }
                                }
                            }
                        }

                    </div>

                </article>
            </div>           
        </div>
    </div>
</div>
