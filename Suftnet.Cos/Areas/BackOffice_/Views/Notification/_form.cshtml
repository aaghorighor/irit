@using Suftnet.Cos.Common;
@using Suftnet.Cos.Extension;

<form action="@Url.Action("Create", "Notification")" method="post" id="form">

 <div class="forms">    
     @Html.AntiForgeryToken()
    <input id="Id" name="Id" value="0" type="hidden" />  
    <input type="hidden" name="TenantId" value="@Url.TenantId()" id="TenantId" />      
          
     <div class="clear">
     </div>      
     
     <div class="grid-3-12">
         <label class="forms-lbl">Notification Type: </label>
         @Html.Dropdown("MessageTypeId", "validate[required]", (int)eSettings.MessageType)
     </div> 
          
     <div class="grid-12-12">
         <label class="forms-lbl">Description :</label>
         <textarea name="Body" id="Body" cols="" rows="" style="height:250px" onkeypress="return imposeMaxLength(event, this, 2000);" class="validate[required]"></textarea>
     </div>
         
     <div class="grid-3-12">
         <label class="forms-lbl">Status: </label>
         @Html.Dropdown("StatusId", "validate[required]", (int)eSettings.MessageStatus)
     </div>

     <div class="grid-12-12">
         <ul style="margin-left:0px; margin-top :0px" class="display01">
             <li class="display01"><span class="etip"><a class="uibutton normal " id="btnSubmit" title="Submit">Submit</a></span></li>                 
         </ul>
     </div>   
       
  </div>       

</form>   

<script type="text/javascript">

    $(function () {

        notification.create();
    });

</script>






