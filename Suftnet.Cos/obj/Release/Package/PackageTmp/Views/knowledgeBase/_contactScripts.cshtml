
@Scripts.Render("~/bundle/rsvp");
@Scripts.Render("~/bundle/ajax");

<script type="text/javascript">

    $(function () {

        $("#success").hide();
        $("#danger").hide();

        $(document).on("submit", "form", function (e) {
            e.preventDefault();

            js.ajaxPost($("#form").attr("action"), $("#form").serialize()).then(
                function (data) {

                    $("#success").hide();
                    $("#danger").hide();

                    switch (data.msg) {
                        case "1000":
                            $("#success").show();
                            $('#form')[0].reset();            
                            break;
                        case "2000":
                            $("#danger").show();
                           
                            break;
                    }
                });
        });

    });
</script>