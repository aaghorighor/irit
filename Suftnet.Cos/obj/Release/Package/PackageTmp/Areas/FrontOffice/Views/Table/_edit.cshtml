
@using Suftnet.Cos.Extension
<form action="@Url.Action("edit", "dineIn", new { area = "frontOffice" })" method="post" id="editform">

    @Html.AntiForgeryToken()

    <div class="forms">

        <input type="hidden" name="editId" id="editId" value="" />

        <div class="grid-6-12">
            <label class="forms-lbl">Table For:</label>
            <input type="text" name="editExpectedGuest" id="editExpectedGuest" onkeyup="numonly(this);" value="1" class="forms-txt validate[required]" maxlength="9" />
        </div>

        <div class="grid-6-12">
            <label class="forms-lbl">Time In: </label>
            <input type="text" name="editTime" id="editTime" readonly="readonly" class="forms-txt-date validate[required]" value="1" maxlength="9" />
        </div>

        <div class="clear"></div>

        <div class="grid-6-12">
            <label class="forms-lbl">Table: </label>
            @Html.TableDropdown("editTableId", "validate[required]")
        </div>

        <div class="grid-6-12">
            <label class="forms-lbl">Status: </label>
            <select class="validate[required]" id="editStatusId" name="editStatusId" style="padding: 6px;">
                <option value="">-- SELECT --</option>
                <option value="c84f0a40-4c93-4200-9531-e6ab0d8ff5d7">Occupied</option>               
                <option value="85616f94-1826-43b1-acff-819b37f028e4">Processing</option>
                <option value="e4e6975e-4881-459d-bb2d-2ad841fba835">Ready</option>
                <option value="dcdc8a0d-e38a-43b5-8091-f167b001f0b5">Pending</option>
                <option value="58ee00d9-d449-4ebf-b4e8-769f51fe7efe">Completed</option>
                <option value="12bc2434-5cd8-42a2-8345-c1a3ecbc8e3b">Cancelled</option>
            </select>
        </div>

        <div class="clear"></div>

        <div class="grid-12-12">
            <input name="ChangeTable" id="ChangeTable" type="checkbox" value="true" /> <label class="form-lbl">Change Table</label>
        </div>

        <div class="grid-12-12">
            <ul style="margin-left:0px; margin-top :5px" class="uibutton-group">
                <li><span><a class="uibutton normal etip" id="btnSaveChanges" title="Save Changes"><i class="fa fa-save"></i> Save Changes</a></span></li>
                <li><span><a class="uibutton normal etip" id="btnCloseOrder" title="Close"><i class="fa fa-close"></i>Close</a></span></li>
            </ul>
        </div>

    </div>   

</form>







