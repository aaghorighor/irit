@using Suftnet.Cos.Extension

<div>

    <div class="forms">
        <input type="hidden" id="deliveryUnit" name="deliveryUnit" value="@Url.DeliveryUnit()" />
        <input type="hidden" id="deliveryRate" name="deliveryRate" value="@Url.DeliveryRate()" />
        <input type="hidden" id="isFlatRate" name="isFlatRate" value="@Url.IsFlatRate()" />
        <input type="hidden" id="flatRate" name="flatRate" value="@Url.FlatRate()" />

        <div class="grid-12-12 ">
            <label class="forms-lbl">Pick Up:</label>
            <input type="text" name="pickUp" id="pickUp" class="forms-txt validate[required]" value="@Url.CompleteAddress();" maxlength="200" />
        </div>

        <div class="grid-12-12 ">
            <label class="forms-lbl">Drop Off :</label>
            <input type="text" name="dropOff" id="dropOff" class="forms-txt validate[required]" maxlength="200" />
        </div>

        <div class="clear"></div>

        <div class="grid-6-12">
            <a class="uibutton normal etip" id="getRoute" name="getRoute" title="Calculate Route Distance">Route</a>         
        </div>

        <div class="clear"></div>

        <div class="grid-6-12">
            <label class="forms-lbl">Distance:(<span id="unit"></span>) </label>
            <input type="text" name="edistance" id="edistance" readonly="readonly" class="forms-txt" />
        </div>

        <div class="grid-6-12">
            <label class="forms-lbl">Duration: (Minute): </label>
            <input type="text" name="eduration" id="eduration" readonly="readonly" class="forms-txt" />
        </div>

        <div class="clear"></div>

        <div class="grid-6-12">
            <label class="forms-lbl">Delivery Cost: </label>
            <input type="text" style="background-color:#000000; color:#ffffff" name="cost" id="cost" class="forms-txt" />
          
        </div>
        <div class="grid-12-12">
            <span id="costNote"></span>
        </div>

       <div class="clear"></div>
       <ul style="margin-left:6.5px; margin-top :5px" class="display">
                <li class="display"><span><a class="uibutton normal etip" id="btnContinue" title="Continue">Continue</a></span></li>
            </ul>

      <div id="dvMap" style="min-height:250px;margin-left:6px;"></div>
       </div>

  </div>








