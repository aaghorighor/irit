@{
    ViewBag.Title = "SUFTNET | USER ";
    Layout = "~/Areas/BackOffice/Views/Shared/_backofficeLayout.cshtml";
}

<ul style="margin-left:0px; margin-top :5px" class="uibutton-group">
    <li><span class="etip"><a href="@Url.Action("index", "tenants")" class="uibutton icon prev normal" title="Back">Back</a></span></li> 
</ul>

<ul class="tabs">
    <li><a href="#tab1" title="Add New User">User </a></li>
    <li><a href="#tab2" title="View existing User">User Viewer </a></li>
</ul>

<div class="tab_container">
    <div id="tab1" class="tab_content">
        <div class="widgets">

            <div class="oneTwo">

                <div class="widget">
                    <div class="content">
                        @Html.Partial("_form")
                    </div>
                </div>

                <div class="clear"></div>
            </div>

            <div class="oneTwo" style="margin-left:20px">

                <div class="widget">
                    <div class="content">
                        @Html.Partial("_photo")
                    </div>
                </div>

            </div>
            <div class="clear"></div>
        </div>
    </div>

    <div id="tab2" class="tab_content">
        <div class="widgets">
            <div class="widget">
                <div class="header"><span><span class="tooltip ico gray"></span> @ViewContext.RouteData.Values["name"].ToString()</span></div>
                <div class="content">
                    @Html.Partial("_loadBy")
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>


@Scripts.Render("~/bundle/70000")

<script type="text/javascript">
    $(function () {

        userAdmin.tenantPageInit();

        setTimeout(function () {
            $(".widgets").show();
        }, 0);
    });
</script>








